---
import Facebook from "../icons/Facebook.astro";
import Instragram from "../icons/Instragram.astro";
import Tiktok from "../icons/Tiktok.astro";
---

<div class="pt-28 px-4 mx-auto max-w-screen-md">
  <h2
    class="mb-4 text-4xl font-extrabold text-center text-gray-900 dark:text-white"
  >
    Get in Touch
  </h2>
  <p class="font-light text-center text-gray-500 dark:text-white sm:text-xl">
    We'd love to hear from you! Feel free to reach out with any questions, or
    follow us on social media to stay updated.
  </p>
  <nav class="flex flex-row gap-10 justify-center mb-8 mt-5 lg:mb-16">
    <Facebook class="size-10 hover:scale-125 transition hover:cursor-pointer" />
    <Instragram
      class="size-10 hover:scale-125 transition hover:cursor-pointer"
    />
    <Tiktok class="size-10 hover:scale-125 transition hover:cursor-pointer" />
  </nav>
  <form action="#" class="space-y-8">
    <div>
      <label
        for="email"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Your email</label
      >
      <input
        type="email"
        id="email"
        class="block w-full p-2.5 text-sm rounded-lg
        bg-gray-50 border border-gray-300 text-white
        focus:ring-primary-500 focus:border-primary-500 shadow-sm
        dark:bg-yellow-700/30 dark:border-yellow-600 dark:placeholder-white/70 dark:text-white
        dark:focus:ring-white dark:focus:border-primary-500 dark:shadow-sm-light"
        placeholder="name@mail.com"
        required
      />
    </div>
    <div class="sm:col-span-2">
      <label
        for="message"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Your message</label
      >
      <textarea
        id="message"
        rows="6"
        class="block w-full p-2.5 text-sm rounded-lg
        bg-gray-50 border border-gray-300 text-white
        focus:ring-primary-500 focus:border-primary-500 shadow-sm
        dark:bg-yellow-700/30 dark:border-yellow-600 dark:placeholder-white/70 dark:text-white
        dark:focus:ring-white dark:focus:border-primary-500 dark:shadow-sm-light"
        placeholder="Leave a comment..."></textarea>
    </div>
    <button
      type="submit"
      class="py-3 px-5 text-sm font-medium text-center
      text-white rounded-lg bg-primary-700 sm:w-fit hover:bg-primary-800
      focus:ring-4 focus:outline-none focus:ring-primary-300
      dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
      >Send message</button
    >
  </form>
</div>
