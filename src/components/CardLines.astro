---
const lines = Astro.props.lines;
---

<div
  class="relative flex justify-center w-full shadow-xl
  transition duration-200 hover:scale-110
  [&>img]:hover:grayscale-[50%] [&>img]:hover:blur-[1px]
  [&>div]:hover:visible"
  id={lines.identifier}
>
  <img class="rounded-2xl" src={lines.imageurl} alt={lines.title} />
  <div
    class="invisible absolute transform -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
  >
    <h1
      class="mb-10 font-bold text-center uppercase lg:text-2xl text-white
      hover:cursor-default [text-shadow:_1px_1px_black]"
    >
      {lines.title}
    </h1>
    <a
      href="#"
      class="w-full px-6 py-3 text-xs text-white border-2 transform rounded-full lg:text-md focus:outline-none font-medium
      transition bg-slate-900 hover:bg-slate-700"
      ><slot />
    </a>
  </div>
</div>
